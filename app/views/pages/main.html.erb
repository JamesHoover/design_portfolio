<body>
	<a name="top"></a>
	<header class="welcome">
		<nav class="row">
			<ul class="paint-box">
				<li class="site-url one-third under-text first"><a href="/" class="under-slide">jameshooverdesign.com</a></li>
					<%= image_tag "blackSplat.svg", class: "paint-splat"%>
				<div class="two-thirds nav-link-list">
					<li class="under-text"><a href="#about" class="nav-link wrap-slide"><span class="wrap-text">About</span></a></li>
					<li class="under-text"><a href="#projects" class="nav-link wrap-slide"><span class="wrap-text">Projects</span></a></li>
					<li class="under-text"><a href="#contact" class="nav-link wrap-slide"><span class="wrap-text">Contact</span></a></li>
				</div>
			</ul>
		</nav>
		<div class="row">
			<div class='one-half first'>
				<div class="welcome-img">
					<%= image_tag "james_selfie_sketch.svg" %>
				</div>
			</div>
			<div class='one-half welcome-message'>
				<h2>Hey! I'm James, a <span class="bold">UX Designer</span> working in Seattle. I focus on building <span class="bold">functional and usable things.</span> Then making them <span class="bold">pretty.</span></h2>
			</div>
		</div>
	</header>
	<!-- START SECTION - $ABOUT -->
	<a name="about"></a>
	<section class="about full-row">
		<h1 class="section-title">Who am I?</h1>
		<%= image_tag "about/james-tree-color4.svg", class: "about-img" %>
	</section>
	<!-- START SECTION - $PROJECTS -->
	<a name="projects"></a>
	<section class="projects full-row">
		<h1 class="section-title">What have I made?</h1>
		<div class="row">
			<h2>Some selections of my recent work</h2>
			<div class="project-thumb one-half first">
 				<a href="projects/govote" class="project-link background">
 					<%= image_tag "projects/govote/flag_sky.jpeg", class: "project-img",  title: "GOVote" %>
 					<h4 class="project-text">GOVote</h4>
 					<%= image_tag "yellowSplat.svg", class: "paint-splat-projects"%>
 				</a>
			</div>
			<div class="project-thumb one-half">
				<a href="projects/freelance" class="project-link background">
 					<%= image_tag "projects/books.jpg", class: "project-img",  title: "Freelance Work" %>
 					<h5 class="project-text">Freelance Work</h5>
 					<%= image_tag "yellowSplat.svg", class: "paint-splat-projects"%>
 				</a>
			</div>
			<div class="project-thumb one-half first">
 				<a href="projects/dealtapp" class="project-link background">
					<%= image_tag "projects/dealtapp.png", class: "project-img back-fill" %>
  				<h4 class="project-text">DealTapp</h4>
  				<%= image_tag "yellowSplat.svg", class: "paint-splat-projects"%>
  			</a>
			</div>
			<div class="project-thumb one-half">
				<a href="projects/privacy" class="project-link background">
 					<%= image_tag "projects/ruler.jpeg", class: "project-img",  title: "Privacy App" %>
 					<h4 class="project-text">Privacy App</h4>
 					<%= image_tag "yellowSplat.svg", class: "paint-splat-projects"%>
			</div>
		</div>
		<a name="photography"></a>
		<div class="row zoom">
			<h2>Photography</h2>
					<div class="project-thumb one-third first photography">
						<%= link_to image_tag("photography/photo19.jpg"), image_path("photography/photo19.jpg"), class: "photo-img-link",  title: "Seattle" %>
					</div>
					<div class="project-thumb one-third photography">
						<%= link_to image_tag("photography/photo28.jpg"), image_path("photography/photo28.jpg"), class: "photo-img-link",  title: "Hawaii" %>
					</div>
					<div class="project-thumb one-third photography">
						<%= link_to image_tag("photography/photo16.jpg"), image_path("photography/photo16.jpg"), class: "photo-img-link",  title: "Fireworks" %>
					</div>
			<h6 class="first"><a href="photography" class="inline-link">Check out more photos</a></h6>

<!-- 		<a name="art"></a>
		<div class="row">
			<h2>Artwork</h2>
			<div class="project-thumb one-half first">
			</div>
			<div class="project-thumb one-half">
			</div>
		</div> -->
	</section>
	<%= render template: "pages/contact" %>
	<script type="text/javascript">
    $('.photography').magnificPopup({
      delegate: 'a', // child items selector, by clicking on it popup will open
      type: 'image',
      gallery: {
        // options for gallery
        enabled: true
      }
    });
  </script>
</body>